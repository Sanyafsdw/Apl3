@model WebApplication3.Data.ViewModels.AddCarViewModel

<form class="p-a-1" asp-action="AddCar" method="post" enctype="multipart/form-data">
    <div class="form-row mb-3">

        <div class="form-group col-md-12">
            <label asp-for="@Model.Car.Name">Название</label>
            <input asp-for="@Model.Car.Name" class="form-control" />
        </div>
    </div>

    <div class="form-row mb-3">

        <div class="form-group col-md-12">
            <label asp-for="@Model.Car.ShortDesc">Краткое описание</label>
            <input asp-for="@Model.Car.ShortDesc" class="form-control" />
        </div>
    </div>

    <div class="form-row mb-3">

        <div class="form-group col-md-12">
            <label asp-for="@Model.Car.CategoryId">Категория</label>
            <select asp-for="@Model.Car.CategoryId" class="form-select" aria-label="Выбор категории">
                <option selected>Выберите категорию</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.CategoryId">@category.Name</option>
                }
            </select>
        </div>
    </div>

    <div class="form-row mb-3">

        <div class="form-group col-md-12">
            <label asp-for="@Model.Car.LongDesc">Полное описание</label>
            <textarea asp-for="@Model.Car.LongDesc" class="form-control" rows="3"></textarea>
        </div>
    </div>

    <div class="form-row mb-3">

        <div class="form-group col-md-12">
            <label asp-for="@Model.Car.Price">Цена</label>
            <input type="number" asp-for="@Model.Car.Price" class="form-control" />
        </div>
    </div>

    <div class="form-row mb-3">

        <div class="form-group col-md-12">
            <label asp-for="@Model.Car.IsFavourite">
                <input asp-for="@Model.Car.IsFavourite" class="form-check-input" type="checkbox" />
                Добавить на главной странице
            </label>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="@Model.Car.Available">
                <input asp-for="@Model.Car.Available" class="form-check-input" type="checkbox" />
                Доступен для заказа
            </label>
        </div>
    </div>

    <div class="form-row mb-3">

        <div class="form-group col-md-12">
            <label asp-for="@Model.Car.Img">Картинка</label>
            <input asp-for="@Model.Car.Img" type="file" name="uploadedFile" class="form-control" />
        </div>
    </div>


    <div class="d-flex gap-3">

        <button type="submit" class="btn btn-lg mt-2 shadow-lg"
                style="font-size: 1rem; height: 40px; border-radius: 50px; background: linear-gradient(145deg, #007bff, #0056b3); flex-grow: 1;">
            <i class="fas fa-save"></i> Добавить
        </button>


        <a href="@Url.Action("CarList", "Car")" class="btn btn-sm mt-2 shadow-lg"
           style="font-size: 1rem; height: 40px; border-radius: 50px; background: linear-gradient(145deg, #dc3545, #c82333); width: 100%; max-width: 120px;">
            <i class="fas fa-times-circle"></i> Отмена
        </a>

    </div>

</form>
