@model List<WebApplication3.Data.Models.Car>
<h3 class="text-center mt-5 mb-3">@ViewBag.HeadText</h3>

<table class="table">
    <thead class="that-light">
        <tr>
            <th scope="col">№</th>
            <th scope="col">Название</th>
            <th scope="col">Краткое описание</th>
            <th scope="col">Полное описание</th>
            <th scope="col">На главной</th>
            <th scope="col">Цена</th>
            <th scope="col">Ссылка к картинке</th>
            <th scope="col">Редактирование</th>
            <th scope="col">Удаление</th>
        </tr>
    </thead>
    @{
        int i = 1;
        foreach (var car in Model)
        {
            <tbody>
                <tr>
                    <th scope="row">@Html.Raw(i++)</th>
                    <th scope="row">@car.Name</th>
                    <td>@car.ShortDesc</td>
                    <td>@car.LongDesc</td>
                    <td>@car.IsFavourite</td>
                    <td>@car.Price</td>
                    <td><img height="50px" src="@car.Img" /></td>
                    <td>

                        <button class="btn btn-lg mt-2 shadow-lg"
                                style="font-size: 1rem; height: 40px; border-radius: 50px; background: linear-gradient(145deg, #007bff, #0056b3); width: 100%; max-width: 150px;"
                                onclick="location.href =('@Url.Action("EditCar", "Car", new {carId=car.CarId})')">
                            <i class="fas fa-edit"></i> Редактировать
                        </button>
                    </td>
                    <td>

                        @Html.ActionLink("Удалить", "DeleteCar", "Car", new { carId = car.CarId },
                             new { onclick = "return confirm('Вы уверены, что хотите удалить товар?')", @class = "btn btn-sm mt-2 shadow-lg", style = "font-size: 1rem; height: 40px; border-radius: 50px; background: linear-gradient(145deg, #dc3545, #c82333); width: 100%; max-width: 120px;" })
                    </td>
                </tr>
            </tbody>
        }
    }
</table>