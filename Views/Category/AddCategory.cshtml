@model WebApplication3.Data.Models.Category

<div class="container mt-3">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="AddCategory" method="post" class="form-horizontal">
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label">Название</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Desc" class="form-label">Описание</label>
            <textarea asp-for="Desc" class="form-control"></textarea>
            <span asp-validation-for="Desc" class="text-danger"></span>
        </div>


        <div class="d-flex gap-3">

            <button type="submit" class="btn btn-lg mt-2 shadow-lg flex-fill"
                    style="font-size: 1rem; border-radius: 50px; background: linear-gradient(145deg, #007bff, #0056b3);">
                <i class="fas fa-save"></i> Сохранить
            </button>


            <a href="@Url.Action("CategoryList")" class="btn btn-lg mt-2 shadow-lg"
               style="font-size: 1rem; border-radius: 50px; background: linear-gradient(145deg, #dc3545, #c82333); width: 100%; max-width: 120px;">
                <i class="fas fa-times-circle"></i> Отмена
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}