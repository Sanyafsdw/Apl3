@model WebApplication3.Data.Models.Order

<div class="container mt-3">
    <form asp-action="Checkout" asp-controller="Order" method="post" class="form-horizontal gap-3">
        <div class="form-group">
            <label asp-for="Name" class="mb-2"></label>
            <div class="col-md-12">
                <input asp-for="Name" class="form-control mb-3" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Surname" class="mb-2"></label>
            <div class="col-md-12">
                <input asp-for="Surname" class="form-control mb-3" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Adress" class="mb-2"></label>
            <div class="col-md-12">
                <input asp-for="Adress" class="form-control mb-3" />
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="mb-2"></label>
            <div class="col-md-12">
                <input asp-for="Phone" class="form-control mb-3" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="mb-2"></label>
            <div class="col-md-12">
                <input asp-for="Email" class="form-control mb-3" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">

            <button type="submit"
                    class="btn btn-primary btn-lg mt-4 px-5 shadow-lg w-100"
                    style="font-size: 1.3rem; border-radius: 50px; background: linear-gradient(145deg, #007bff, #0056b3);">
                <i class="fas fa-check-circle"></i> Завершить заказ
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

