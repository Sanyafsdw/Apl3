@model List<WebApplication3.Data.Models.Category>
<h3 class="text-center mt-5 mb-3">@ViewBag.HeadText</h3>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">№</th>
            <th scope="col">Название</th>
            <th scope="col">Описание</th>
            <th scope="col">Редактирование</th>
            <th scope="col">Удаление</th>
        </tr>
    </thead>
    @{
        int i = 1;
        foreach (var category in Model)
        {
            <tbody>
                <tr>
                    <th scope="row">@Html.Raw(i++)</th>
                    <th scope="row">@category.Name</th>
                    <td>@category.Desc</td>
                    <td>

                        <button class="btn btn-primary shadow-lg" style="font-size: 1rem; border-radius: 50px; background: linear-gradient(145deg, #007bff, #0056b3);"
                                onclick="location.href = '@Url.Action("EditCategory", "Category", new {categoryId = category.CategoryId})'">
                            <i class="fas fa-edit"></i> Редактировать
                        </button>
                    </td>
                    <td>

                        <a href="@Url.Action("DeleteCategory", "Category", new { categoryId = category.CategoryId })"
                           onclick="return confirm('Вы уверены, что хотите удалить категорию?')"
                           class="btn btn-danger shadow-lg"
                           style="font-size: 1rem; border-radius: 50px; background: linear-gradient(145deg, #dc3545, #c82333);">
                            <i class="fas fa-trash-alt"></i> Удалить
                        </a>
                    </td>
                </tr>
            </tbody>
        }
    }
</table>
