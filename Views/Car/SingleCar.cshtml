@model WebApplication3.Data.Models.Car

<div class="container mt-5">
    <div class="card mx-auto shadow-lg bg-dark text-white" style="max-width: 800px; border-radius: 15px; overflow: hidden;">

        <div class="row g-0">
            <div class="col-md-6">
                <img src="@Model.Img" class="img-fluid" alt="@Model.Name" style="height: 100%; object-fit: cover;">
            </div>
            <div class="col-md-6 d-flex flex-column justify-content-between">
                <div class="card-body p-4">
                    <h2 class="card-title fw-bold text-uppercase mb-3" style="font-size: 2rem;">@Model.Name</h2>
                    <p class="card-text text-muted mb-4" style="font-size: 1rem; line-height: 1.5;">
                        <b>Описание:</b> @Model.LongDesc
                    </p>
                </div>
                <!-- Цена и стрелка внизу карточки -->
                <div class="card-footer bg-transparent p-2 d-flex align-items-center justify-content-end">
                    <p class="card-text fw-bold mb-0" style="font-size: 1.5rem; color: #0d6efd;">
                        Цена: @Model.Price.ToString("c")
                    </p>
                    <span class="ms-2" style="color: #0d6efd; font-size: 1.8rem;">→</span>
                </div>
            </div>
        </div>
    </div>
</div>
